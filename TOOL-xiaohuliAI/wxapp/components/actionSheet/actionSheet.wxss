.action-sheet {
    height: 100%;
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;
}

.action-sheet .masker {
    background: rgba(0,0,0,.3);
    height: 100%;
    left: 0;
    opacity: 0;
    position: absolute;
    top: 0;
    transition: opacity .2s linear;
    width: 100%;
    z-index: 1;
}

.action-sheet .masker.show {
    opacity: 1;
}

.action-sheet .lists {
    background: #fff;
    left: 0;
    position: absolute;
    transition: all .2s linear;
    width: 100%;
    z-index: 2;
}

.action-sheet .lists .item {
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
    height: 100rpx;
    letter-spacing: 1px;
    line-height: 100rpx;
    text-align: center;
    width: 100%;
}

.action-sheet .lists .item:last-child {
    border: none;
}

.action-sheet .lists .item:active {
    background: #f7f7f8;
}