.pages {
    text-align: center;
}

.pages text {
    background: #fff;
    border-radius: 10rpx;
    color: #666;
    cursor: pointer;
    display: inline-block;
    font-size: 30rpx;
    margin: 0 20rpx;
    padding: 12rpx 30rpx;
}

.pages text:active {
    background: #04babe;
    color: #fff;
}

.pages .form-block {
    background-color: #fff;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    padding: 30rpx 100rpx;
}

.pages .form-label {
    color: #333;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 32rpx;
    margin: 0;
    padding: 24rpx 0;
}