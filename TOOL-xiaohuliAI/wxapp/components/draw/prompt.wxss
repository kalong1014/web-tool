.box-prompt {
    box-sizing: border-box;
    transition: background .1s ease-in-out;
    width: 100%;
    z-index: 9;
}

.box-prompt .words-cate {
    padding: 0 0 24rpx;
}

.box-prompt .words-cate .item {
    align-items: center;
    background-color: #e2e6e4;
    border-radius: 10rpx;
    color: #656565;
    cursor: pointer;
    display: flex;
    float: left;
    font-size: 28rpx;
    font-weight: 400;
    height: 64rpx;
    justify-content: center;
    line-height: 64rpx;
    margin: 0 16rpx 16rpx 0;
    padding: 0 30rpx;
}

.box-prompt .words-cate .item:hover {
    background: #d4dad6;
}

.box-prompt .words-cate .item .count {
    background-color: #04babe;
    border-radius: 50%;
    color: #fff;
    display: inline-block;
    font-size: 24rpx;
    height: 36rpx;
    line-height: 36rpx;
    margin-left: 8rpx;
    text-align: center;
    width: 36rpx;
}

.box-prompt .words-input {
    position: relative;
}

.box-prompt .words-input textarea {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 10rpx;
    box-sizing: border-box;
    min-height: 88rpx;
    padding: 20rpx;
    width: 100%;
}

.box-prompt .words-input .btn-add {
    background: #fff;
    border: 1px solid #04babe;
    bottom: 16rpx;
    color: #04babe;
    font-size: 26rpx;
    height: 64rpx;
    line-height: 64rpx;
    position: absolute;
    right: 16rpx;
    z-index: 99;
}

.box-prompt .words-list {
    margin: 40rpx 0 0;
    max-height: 604rpx;
    overflow: auto;
}

.box-prompt .words-list .item {
    align-items: center;
    background: #d1f2f3;
    border: 1px solid #04babe;
    border-radius: 10rpx;
    color: #04babe;
    display: flex;
    float: left;
    font-size: 28rpx;
    margin-bottom: 16rpx;
    margin-right: 16rpx;
    overflow: hidden;
    padding: 12rpx 24rpx;
    position: relative;
}

.box-prompt .words-list .item:active {
    opacity: .6;
}

.box-prompt .words-list .item .weight {
    background: #04babe;
    border-radius: 8rpx;
    color: #fff;
    cursor: pointer;
    display: block;
    font-size: 24rpx;
    height: 36rpx;
    line-height: 36rpx;
    margin-right: 12rpx;
    text-align: center;
    width: 36rpx;
}

.box-prompt .words-list .item .weight:hover {
    opacity: .6;
}

.popup-weight {
    padding: 30rpx;
}

.popup-weight .alert-info {
    color: #666;
    font-size: 28rpx;
    padding-left: 60rpx;
}

.popup-weight .footer {
    margin-top: 30rpx;
}

.popup-weight .footer,.popup-weight .footer .btn {
    align-items: center;
    display: flex;
    justify-content: center;
}

.popup-weight .footer .btn {
    border: none!important;
    border-radius: 10rpx;
    box-sizing: border-box;
    cursor: pointer;
    font-size: 28rpx;
    height: 72rpx;
    line-height: 72rpx;
    margin: 0 20rpx;
    width: 200rpx;
}

.popup-weight .footer .btn:active {
    opacity: .6;
}

.popup-weight .footer .btn-default {
    background: #eee!important;
    color: #444!important;
}

.popup-weight .footer .btn-primary {
    background: #04babe!important;
    color: #fff!important;
}

.popup-weight .footer .btn-primary-plain {
    background: #d1f2f3!important;
    color: #04babe!important;
}