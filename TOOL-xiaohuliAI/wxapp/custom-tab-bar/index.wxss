.tab-bar {
    background: #fff;
    background-position: 50%;
    background-size: 100% 100%;
    display: flex;
    height: 110rpx;
    padding-bottom: env(safe-area-inset-bottom);
    width: 100%;
}

.tab-bar-bottom {
    bottom: 0;
    height: 110rpx;
    left: 0;
    position: fixed;
    right: 0;
    width: 100%;
}

.tab-bar-border {
    background: #f6f6f6;
    box-shadow: 0 -1px 3px 1px #f6f6f6;
    height: 1rpx;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}

.tab-bar-item {
    flex: 1;
    position: relative;
}

.tab-bar-item-image {
    height: 56rpx;
    left: 50%;
    margin-left: -28rpx;
    position: absolute;
    top: 14rpx;
    transition: all .2s;
    width: 56rpx;
}

.tab-bar-item-text {
    font-size: 24rpx;
    left: 0;
    line-height: 24rpx;
    position: absolute;
    text-align: center;
    top: 72rpx;
    width: 100%;
}