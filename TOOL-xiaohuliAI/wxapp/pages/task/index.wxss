.page {
    bottom: 110rpx;
    left: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
}

.mod-title {
    font-size: 32rpx;
    padding: 30rpx;
}

.mod-title text {
    border-left: 8rpx solid #04babe;
    height: 30rpx;
    line-height: 24rpx;
    padding-left: 16rpx;
}

.wallet {
    align-items: center;
    background: #04babe;
    color: #fff;
    display: flex;
    flex-direction: column;
    height: 160rpx;
    justify-content: center;
    margin-bottom: -80rpx;
    padding-bottom: 110rpx;
}

.wallet .balance {
    font-size: 36rpx;
    text-align: center;
}

.wallet .balance text {
    color: red;
    font-size: 48rpx;
    font-weight: 700;
    margin: 0 14rpx;
}

.wallet .vip {
    color: #eee;
}

.wallet .tips {
    background: #333;
    border-radius: 10rpx;
    color: #eed196;
    font-size: 24rpx;
    font-weight: 400;
    padding: 6rpx 20rpx;
}

.box {
    background: hsla(0,0%,100%,.8);
    border-radius: 20rpx;
    box-sizing: border-box;
    margin: 30rpx;
    overflow: hidden;
    padding: 20rpx 30rpx;
    width: 690rpx;
}

.box .box-title {
    color: #333;
    font-size: 32rpx;
    font-weight: 700;
    height: 72rpx;
    line-height: 72rpx;
    width: 100%;
}

.box .box-title .desc {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-left: 20rpx;
}

.task-list {
    padding-top: 20rpx;
}

.task-list .task-item {
    align-items: flex-start;
    border-bottom: 2rpx solid #f3f6f9;
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
    width: 100%;
}

.task-list .task-item:last-child {
    border-bottom: 0;
}

.task-item .task-icon {
    background-color: #f3f6f9;
    border-radius: 10rpx;
    height: 100rpx;
    overflow: hidden;
    width: 100rpx;
}

.task-item .task-icon image {
    height: 100%;
    width: 100%;
}

.task-item .task-info {
    margin: 0 20rpx;
    width: 380rpx;
}

.task-item .task-name {
    color: #333;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    line-height: 48rpx;
}

.task-item .task-desc {
    color: #999;
    font-size: 26rpx;
    line-height: 44rpx;
    margin: 6rpx 0 20rpx;
}

.task-item .task-desc text {
    color: red;
    margin: 0 6rpx;
}

.task-item .task-status {
    color: #04babe;
    font-size: 26rpx;
}

.task-item .task-op {
    width: 110rpx;
}

.task-item .task-btn {
    background: #04babe;
    border: none;
    border-radius: 40rpx;
    color: #fff;
    font-size: 22rpx;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0;
}

.task-item .task-btn::after {
    display: none;
}

.task-item .task-btn:active {
    transform: scale(.9);
}

.task-item .task-btn.disabled {
    background: #999;
}