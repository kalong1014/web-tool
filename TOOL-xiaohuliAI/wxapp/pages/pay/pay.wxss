.page {
    bottom: 110rpx;
    overflow: hidden;
    position: absolute;
    right: 0;
}

.box-user,.page {
    left: 0;
    top: 0;
    width: 100%;
}

.box-user {
    height: 180rpx;
    position: relative;
    z-index: 1;
}

.box-user .userinfo {
    align-items: center;
    display: flex;
    padding: 20rpx 0 0 60rpx;
}

.box-user .userinfo .avatar {
    background-color: #f8f8f8;
    border-radius: 50%;
    height: 108rpx;
    overflow: hidden;
    width: 108rpx;
}

.box-user .userinfo .avatar image {
    height: 100%;
    width: 100%;
}

.box-user .userinfo .info {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.box-user .userinfo .info .nickname {
    color: #1b1c1c;
    font-size: 34rpx;
    font-weight: 700;
    line-height: 48rpx;
    margin-top: 6rpx;
    max-width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.box-user .userinfo .info .vip {
    align-items: center;
    border-radius: 18rpx;
    color: #1b1c1c;
    display: flex;
    height: 36rpx;
    margin-top: 10rpx;
}

.box-user .userinfo .info .vip image {
    height: 32rpx;
    margin-right: 10rpx;
    margin-top: 2rpx;
    width: 32rpx;
}

.box-user .userinfo .info .vip text {
    font-size: 24rpx;
}

.box-user .wallet {
    align-items: center;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    justify-content: center;
    position: absolute;
    right: 30rpx;
    text-align: center;
    top: 30rpx;
    width: 200rpx;
}

.box-user .wallet .num {
    color: #04babe;
    font-size: 32rpx;
    line-height: 44rpx;
}

.box-user .wallet .label {
    color: #666;
    font-size: 24rpx;
}

.box-pay {
    border-bottom-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    margin: 0 auto 30rpx;
    overflow: hidden;
    position: relative;
    width: 100%;
    width: 690rpx;
}

.box-pay .tabs {
    background: #eef4f4;
    justify-content: space-between;
    overflow: hidden;
    width: 100%;
}

.box-pay .tabs,.box-pay .tabs .tab-item {
    align-items: center;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    display: flex;
}

.box-pay .tabs .tab-item {
    color: #1b1c1c;
    height: 100rpx;
    justify-content: center;
    width: 50%;
}

.box-pay .tabs .tab-item .icon {
    height: 44rpx;
    margin-right: 10rpx;
    margin-top: 4rpx;
    width: 44rpx;
}

.box-pay .tabs .tab-item.active {
    background: #fff;
    font-weight: 700;
}

.box {
    background: #fff;
    box-sizing: border-box;
    overflow: hidden;
    padding: 30rpx 40rpx;
    width: 100%;
}

.box .box-title {
    align-items: center;
    color: #1b1c1c;
    display: flex;
    font-size: 32rpx;
    height: 72rpx;
    line-height: 72rpx;
    width: 100%;
}

.box .box-title .line {
    background: #04babe;
    border-radius: 5rpx;
    height: 30rpx;
    margin-right: 16rpx;
    width: 10rpx;
}

.box .box-title .desc {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
    margin-left: 20rpx;
}

.goods-list {
    padding: 20rpx 0;
}

.goods-list .goods {
    background: #f3f9f9;
    border: 4rpx solid #f3f6f9;
    border-radius: 30rpx;
    box-sizing: border-box;
    float: left;
    height: 206rpx;
    margin-left: 26rpx;
    margin-top: 26rpx;
    padding: 20rpx 0;
    position: relative;
    text-align: center;
    width: 270rpx;
}

.goods-list .goods .hint {
    background: #fb5858;
    border-radius: 24rpx 12rpx 24rpx 0;
    color: #fff;
    font-size: 22rpx;
    left: -4rpx;
    padding: 6rpx 20rpx;
    position: absolute;
    top: -24rpx;
}

.goods-list .goods .title {
    align-items: baseline;
    color: #1b1c1c;
    display: flex;
    font-size: 48rpx;
    font-weight: 700;
    justify-content: center;
}

.goods-list .goods .title .unit {
    font-size: 28rpx;
    font-weight: 400;
    margin-left: 20rpx;
}

.goods-list .goods .price {
    color: #444;
    font-size: 28rpx;
    font-weight: 700;
    margin: 10rpx 0;
}

.goods-list .goods .price text {
    color: red;
    margin: 0 6rpx;
}

.goods-list .goods .market_price {
    color: #999;
    font-size: 24rpx;
    text-decoration: line-through;
}

.goods-list .goods.active {
    border-color: #04babe;
}

.desc-list {
    padding: 20rpx 0 20rpx 24rpx;
}

.desc-list .desc-item {
    align-items: center;
    align-items: flex-start;
    display: flex;
    line-height: 48rpx;
    margin: 20rpx 0;
    width: 100%;
}

.desc-list .desc-item .icon {
    height: 32rpx;
    margin-right: 16rpx;
    margin-top: 4rpx;
    width: 32rpx;
}

.desc-list .desc-item .icon image {
    height: 100%;
    width: 100%;
}

.desc-list .desc-item .text {
    color: #444;
    font-size: 30rpx;
    width: 534rpx;
}

.paynow {
    bottom: 0;
    left: 0;
    padding: 40rpx 0 20rpx;
    position: absolute;
    width: 100%;
}

.paynow .btn-pay {
    align-items: center;
    background: #04babe;
    border: none;
    border-radius: 44rpx;
    box-sizing: border-box;
    color: #fff;
    display: flex;
    font-size: 32rpx;
    height: 88rpx;
    justify-content: center;
    letter-spacing: 2rpx;
    outline: none;
    padding: 10rpx;
    width: 610rpx;
}

.paynow .btn-pay::after {
    display: none;
}

.paynow .btn-pay:active {
    transform: scale(.95);
}

.paynow .agreement {
    align-items: center;
    color: #999;
    display: flex;
    font-size: 28rpx;
    justify-content: center;
    padding: 30rpx 0;
    text-align: center;
    width: 100%;
}

.paynow .agreement text {
    color: #04babe;
}

.paynow .agreement .check {
    transform: scale(.75);
}