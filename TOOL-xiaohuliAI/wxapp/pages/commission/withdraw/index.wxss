page {
    background: #f7f7f7;
}

.container {
    color: #666;
    padding: 30rpx;
}

.box-input {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 24rpx;
    padding: 30rpx;
}

.box-input .title {
    font-size: 32rpx;
    margin-bottom: 10rpx;
}

.box-input .money .unit {
    font-size: 32rpx;
    margin-right: 10rpx;
}

.box-input .money {
    color: #04babe;
    font-size: 44rpx;
    font-weight: 700;
}

.box-type {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 24rpx;
    padding: 0 30rpx;
}

.box-type .title {
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.box-type .title .icon {
    background-color: #04babe;
    border-radius: 6rpx;
    height: 32rpx;
    margin-right: 16rpx;
    width: 6rpx;
}

.box-type .type-item {
    align-items: center;
    border-bottom: 1px solid #f6f6f6;
    display: flex;
    height: 80rpx;
    justify-content: space-between;
    line-height: 60rpx;
    padding: 10rpx 30rpx 10rpx 0;
}

.box-type .type-item .row-label {
    align-items: center;
    color: #666;
    display: flex;
    font-size: 30rpx;
    font-weight: 500;
    height: 40rpx;
}

.box-type .type-item .row-label image {
    height: 64rpx;
    margin-right: 10rpx;
    width: 64rpx;
}

.box-type .type-item .checkbox-img {
    height: 40rpx;
    width: 40rpx;
}

.box-form {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx 30rpx;
}

.box-form .form-group {
    align-items: center;
    border-bottom: 1px solid #f6f6f6;
    display: flex;
    font-size: 30rpx;
    justify-content: space-between;
    padding: 16rpx 0;
}

.box-form .form-group:last-child {
    border-bottom: none;
}

.box-form .form-group input {
    text-align: right;
}

.btn-submit {
    background: #04babe;
    border-radius: 40rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    height: 80rpx;
    line-height: 80rpx;
    margin: 100rpx auto 30rpx;
    text-align: center;
    width: 600rpx;
}

.btn-submit.disabled {
    background: #ddd;
}

.upload .image {
    float: left;
    height: 116rpx;
    margin-bottom: 16rpx;
    margin-right: 16rpx;
    position: relative;
    width: 116rpx;
}

.upload .image .img {
    background-color: #dedede;
    height: 100%;
    width: 100%;
}

.upload .image .del {
    background-color: rgba(0,0,0,.5);
    border-bottom-left-radius: 6rpx;
    height: 32rpx;
    overflow: hidden;
    padding: 2rpx 8rpx;
    position: absolute;
    right: 0;
    top: 0;
    width: 32rpx;
}

.upload .image .del .icon {
    height: 100%;
    width: 100%;
}

.upload .btn-upload {
    align-items: center;
    background: #fafbfc;
    border: 1px dashed #ccc;
    border-radius: 6rpx;
    display: flex;
    float: left;
    height: 116rpx;
    justify-content: center;
    margin-bottom: 16rpx;
    overflow: hidden;
    position: relative;
    width: 116rpx;
}

.upload .btn-upload .icon {
    height: 100%;
    width: 100%;
}

.no-order {
    bottom: 0;
    display: block;
    left: 0;
    padding-top: 203rpx;
    position: absolute;
    right: 0;
    text-align: center;
    top: 88rpx;
    width: 100%;
}

.no-order-img {
    height: 100rpx;
    margin-bottom: 30rpx;
    width: 100rpx;
}

.no-order .text {
    color: #999;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    text-align: center;
}