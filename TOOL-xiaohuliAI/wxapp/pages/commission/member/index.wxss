page {
    background: #f7f7f7;
}

.fui-list {
    background-color: #fff;
    overflow: hidden;
    padding: 16rpx 24rpx;
    transition-duration: .3s;
}

.fui-list,.fui-list-media {
    align-items: center;
    display: flex;
    position: relative;
}

.fui-list-media {
    box-sizing: border-box;
    color: #000;
    flex-shrink: 0;
    flex-wrap: nowrap;
    margin-right: 20rpx;
}

.fui-list-inner {
    box-sizing: border-box;
    display: block;
    flex: 1;
    overflow: hidden;
    position: relative;
}

.com-down .subtitle {
    color: #999;
    font-size: 24rpx;
}

.com-down .image-32 {
    height: 32rpx;
    width: 32rpx;
}

image {
    vertical-align: top;
}

.com-down .fui-list-media image {
    background: #f7f7f7;
    border: 1px solid #f2f2f2;
    height: 80rpx;
    width: 80rpx;
}

.com-down .fui-list-inner .row {
    font-size: 28rpx;
}

.com-down .row-remark {
    color: #000;
    flex-shrink: 0;
    font-size: 24rpx;
    min-width: 150rpx;
    padding-left: 25rpx;
    position: relative;
    text-align: right;
}

.no-order {
    bottom: 0;
    display: block;
    left: 0;
    padding-top: 203rpx;
    position: absolute;
    right: 0;
    text-align: center;
    top: 88rpx;
    width: 100%;
}

.no-order-img {
    height: 100rpx;
    margin-bottom: 30rpx;
    width: 100rpx;
}

.no-order .text {
    font-size: 30rpx;
    margin-bottom: 30rpx;
}

.no-more,.no-order .text {
    color: #999;
    text-align: center;
}

.no-more {
    font-size: 28rpx;
    margin: 20rpx 0 30rpx;
}