page {
    background: #f7f7f7;
}

.container {
    min-height: 100%;
    overflow-x: hidden;
    width: 100%;
}

.tab-nav {
    align-items: center;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    box-sizing: border-box;
    display: flex;
    height: 88rpx;
    justify-content: space-around;
    line-height: 88rpx;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;
}

.tab {
    border-bottom: 6rpx solid #fff;
    color: #233445;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 6rpx;
    position: relative;
    text-align: center;
}

.active {
    border-bottom: 6rpx solid #04babe;
    color: #04babe;
}

.record-list {
    background-color: #fff;
    padding-top: 20rpx;
}

.record-list .cu-item {
    align-items: flex-start;
    border-bottom: 1px solid #f6f6f6;
    display: flex;
    height: auto;
    justify-content: flex-end;
    line-height: 1.4;
    padding: 12rpx 30rpx;
    position: relative;
}

.record-list .cu-item .thumb {
    background-color: #fff;
    background-size: cover cover;
    border-radius: 10rpx;
    height: 48rpx;
    margin-right: 20rpx;
    width: 48rpx;
}

.record-list .cu-item .thumb image {
    height: 100%;
    width: 100%;
}

.record-list .cu-item .info {
    line-height: 1.4;
    padding-right: 20rpx;
    width: calc(100% - 80rpx);
}

.record-list .cu-item .cu-btn {
    height: 80rpx;
    line-height: 1.4;
    padding: 20rpx;
    width: 80rpx;
}

.justify-between {
    display: flex;
    justify-content: space-between;
}

.text-lg {
    font-size: 28rpx;
}

.text-xl {
    font-size: 32rpx;
}

.text-bold {
    font-weight: 700;
}

.text-black {
    color: #333;
}

.text-red {
    color: #e54d42;
}

.text-sm {
    font-size: 24rpx;
}

.text-gray {
    color: #8799a3;
}

.text-orange {
    color: #ff8000;
}

.text-green {
    color: #39b54a;
}

.text-blue {
    color: #0081ff;
}

.no-order {
    bottom: 0;
    display: block;
    left: 0;
    padding-top: 203rpx;
    position: absolute;
    right: 0;
    text-align: center;
    top: 88rpx;
    width: 100%;
}

.no-order-img {
    height: 100rpx;
    margin-bottom: 30rpx;
    width: 100rpx;
}

.no-order .text {
    font-size: 30rpx;
    margin-bottom: 30rpx;
}

.no-more,.no-order .text {
    color: #999;
    text-align: center;
}

.no-more {
    font-size: 28rpx;
    margin: 20rpx 0 30rpx;
}