.page {
    bottom: 110rpx;
    overflow: hidden;
    position: absolute;
    right: 0;
}

.page,.tabs {
    left: 0;
    top: 0;
    width: 100%;
}

.tabs {
    height: 88rpx;
    padding-left: 12rpx;
}

.pannel,.tabs {
    box-sizing: border-box;
}

.pannel {
    background: hsla(0,0%,100%,.8);
    border-radius: 20rpx;
    margin: 30rpx auto 0;
    overflow: hidden;
    padding: 30rpx;
    width: 690rpx;
}

.pannel .title {
    font-size: 28rpx;
    font-weight: 700;
    padding: 0 0 30rpx;
    width: 100%;
}

.pannel .textarea {
    background: #f3f6f6;
    border: 1px solid #04babe;
    border-radius: 20rpx;
    color: #1b1c1c;
    font-size: 28rpx;
    line-height: 36rpx;
    min-height: 140rpx;
    padding: 20rpx;
}

.pannel .btn-group {
    height: 64rpx;
    margin: 60rpx 0 30rpx;
    text-align: center;
    width: 100%;
}

.pannel .btn-group view {
    display: inline-block;
}

.pannel .btn-group .btn {
    background: #04babe;
    border: 1px solid #04babe;
    border-radius: 40rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
    height: 80rpx;
    letter-spacing: 1px;
    line-height: 80rpx;
    margin: 0 auto;
    text-align: center;
    width: 200rpx;
}

.pannel .btn-group .btn:active {
    opacity: .8;
}

.pannel .btn-group .btn-next {
    background: #fff;
    color: #04babe;
    margin-left: 30rpx;
}

.pannel .btn-group .btn-save {
    color: #fff;
    font-weight: 500;
    text-align: center;
    width: 400rpx;
}

.poster-list {
    height: 500rpx;
    margin: 20rpx 0;
    width: 100%;
}

.poster-list,.poster-list .item {
    overflow: hidden;
}

.poster {
    margin: 0 auto;
    overflow: hidden;
    position: relative;
}

.poster,.poster image {
    height: 100%;
    width: 100%;
}

.poster image {
    position: absolute;
}