.page {
    bottom: 110rpx;
    left: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
}

.form {
    background: hsla(0,0%,100%,.8);
    border-radius: 20rpx;
    margin: 30rpx;
    padding: 10rpx 0;
}

.form .a-item {
    align-items: center;
    border-top: 1rpx solid #eee;
    display: flex;
    height: 72rpx;
    justify-content: space-between;
    padding: 20rpx 40rpx;
}

.form .a-item:active {
    background: #f7f7f7;
}

.form .a-item .label {
    color: #999;
    font-size: 32rpx;
    width: 200rpx;
}

.form .a-item .value {
    align-items: center;
    color: #333;
    display: flex;
    font-size: 32rpx;
    justify-content: flex-end;
    width: 400rpx;
}

.form .a-item .arrow {
    height: 24rpx;
    margin-left: 20rpx;
    opacity: .8;
    width: 24rpx;
}

.form .a-item .icon {
    height: 40rpx;
    margin-right: 20rpx;
    width: 40rpx;
}

.form .a-item .avatar {
    background: #f7f7f7;
    border-radius: 20rpx;
    height: 80rpx;
    width: 80rpx;
}

.text-primary {
    color: #04babe;
}

.text-danger {
    color: #f56c6c;
}

.logout {
    align-items: center;
    bottom: 60rpx;
    display: flex;
    justify-content: center;
    left: 0;
    position: absolute;
    width: 100%;
}

.logout,.logout .btn-logout {
    height: 100rpx;
    text-align: center;
}

.logout .btn-logout {
    border-radius: 10rpx;
    font-size: 32rpx;
    line-height: 100rpx;
    width: 240rpx;
}